rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Profiles - Users can read/write their own profile
    match /profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Usernames - Users can read usernames, create their own, delete their own
    match /usernames/{username} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid && !exists(/databases/$(database)/documents/usernames/$(username));
      allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // Challenges - Authenticated users can read all challenges, create/update/delete their own
    match /challenges/{challengeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Challenge Participants - Users can read/write their own participant data
    match /challengeParticipants/{participantId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow update: if request.auth != null && request.auth.uid == resource.data.uid;
      allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // Check-ins - Users can read/write their own check-ins
    match /checkins/{checkinId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow update: if request.auth != null && request.auth.uid == resource.data.uid;
      allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // Invites - Authenticated users can manage invites
    match /invites/{inviteId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
